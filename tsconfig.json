{
  "compilerOptions": {
    "resolveJsonModule": true,
    "keyofStringsOnly": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": ".",
    "paths": {
      "~/*": [
        "packages/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}