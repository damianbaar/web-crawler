{
  "name": "web-crawler",
  "version": "0.1.0",
  "description": "Simple web-crawler",
  "private": true,
  "scripts": {
    "lint": "jest -c jest.lint.js --changedSince 'master'",
    "test:unit": "jest -c jest.test.js --changedSince 'master'",
    "test": "yarn run test:unit"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^11.9.4",
    "jest": "^24.1.0",
    "jest-cli": "^24.1.0",
    "lint-staged": "^8.1.4",
    "jest-runner-tslint": "^1.0.5",
    "tslint-config-prettier": "^1.18.0",
    "tslint": "^5.12.1",
    "husky": "^1.3.1",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.3",
    "webpack": "^4.29.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/**/*.{ts,tsx}": [
        "yarn run lint",
        "git add"
      ]
    }
  },
  "jest": {
    "coverageReporters": [
      "json"
    ]
  },
  "jest-runner-tslint": {
    "cliOptions": {
      "fix": true
    }
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "author": "Damian Baar",
  "license": "MIT"
}